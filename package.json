{
  "name": "react-boilerplate",
  "description": "Modern React + TypeScript boilerplate with Vite.",
  "keywords": [
    "Vite",
    "SCSS",
    "TailwindCSS",
    "TypeScript",
    "React"
  ],
  "author": "Coding Sable",
  "license": "ISC",
  "private": true,
  "version": "1.0.0",
  "repository": {
    "type": "git",
    "url": "react-boilerplate"
  },
  "type": "module",
  "main": "main.tsx",
  "engines": {
    "vscode": "^1.22.0",
    "pnpm": ">= 8.10.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pnpm run lint && pnpm run jest"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "echo": "echo \"Error: no test specified\" && exit 1",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx --fix --report-unused-disable-directives --max-warnings 0",
    "jest": "jest",
    "test": "vitest",
    "test:run": "vitest run",
    "prepare": "husky install",
    "json": "json-server --watch db.json --port 3001"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "6.2.0",
    "@testing-library/react": "14.1.2",
    "@testing-library/user-event": "14.5.2",
    "@types/eslint": "8.56.2",
    "@types/eslint-config-prettier": "^6.11.3",
    "@types/jest": "29.5.11",
    "@types/jsdom": "^21.1.6",
    "@types/lodash": "^4.14.202",
    "@types/node": "20.11.0",
    "@types/react": "^18.2.47",
    "@types/react-dom": "^18.2.18",
    "@types/react-router": "5.1.20",
    "@types/react-router-dom": "5.3.3",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.18.1",
    "@typescript-eslint/parser": "^6.18.1",
    "@vitejs/plugin-react-swc": "^3.5.0",
    "autoprefixer": "10.4.16",
    "concurrently": "8.2.2",
    "cssnano": "6.0.3",
    "eslint": "^8.56.0",
    "eslint-config-airbnb": "19.0.4",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-import": "2.29.1",
    "eslint-plugin-prettier": "5.1.3",
    "eslint-plugin-react": "7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "husky": "8.0.3",
    "jest": "29.7.0",
    "jsdom": "23.2.0",
    "json-server": "1.0.0-alpha.21",
    "lodash": "4.17.21",
    "postcss": "8.4.33",
    "prettier": "3.2.2",
    "react-router": "6.21.2",
    "react-router-dom": "6.21.2",
    "sass": "^1.69.7",
    "tailwindcss": "3.4.1",
    "typescript": "^5.2.2",
    "uuid": "9.0.1",
    "vite": "^5.0.8",
    "vitest": "1.2.0"
  }
}
